<%= javascript_pack_tag 'product-index' %>

<%= react_component("HelloWorld", {name: "Jon Snow"}) %>

<ul class="product-list">
    <% @products.each do |product| %>
        <li data-tippy="<%= product.description %>" 
            data-tippy-animation="scale" 
            data-tippy-duration="0"
            data-tippy-delay="[500, 200]"
            data-tippy-arrow="true" >

            <%= link_to(product.title, product_path(product.id)) %>
            <small>
            Price: $<%= product.price %>CAD
            </small>
            <br>
            <small>
            Reviewed <%= pluralize(product.reviews_count, "time") %>
            </small>
            <br>
        </li>
    <% end %>
</ul>