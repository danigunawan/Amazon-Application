<h1> <%= @product.title %> </h1>

<p> <%= @product.description %> </p>

<div>
    <small>
        Priced at $<%= @product.price %> CAD
    </small>
</div>

<div>
    <small>
        <%= link_to(
            "Edit",
            edit_product_path(@product.id)
        ) %>

        <%= link_to(
            "Delete",
            product_path,
            method: :delete,
            data: {
                confirm: "Are you sure you want to get rid of this product?\nThe health benefits are extraordinary"
            }
        ) %>
    </small>
</div>